{% extends 'base.html.twig' %}
{% block javascripts %}
<script  src="{{asset('js/script.js')}}"></script>
{% endblock %}
{% block title %}Appolo cloud{% endblock %}

{% block body %}
<div class="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="{{ asset('/HomePicture/_2aa7e9dd-1542-45e8-a70b-0389214c66d2.jpg') }}" alt="Slide 1">
    </div>
    <div class="carousel-item">
      <img src="{{ asset('/HomePicture/_11afafff-b918-45ce-b81d-6fa358470805.jpg') }}" alt="Slide 2">
    </div>
    <div class="carousel-item">
      <img src="{{ asset('/HomePicture/patisserie2.jpg') }}" alt="Slide 3">
    </div>
  </div>
  <button class="carousel-control prev" aria-label="Previous">&#10094;</button>
  <button class="carousel-control next" aria-label="Next">&#10095;</button>
</div>

  

<a href="{{path('add_product')}}">Ajouter un produit</a>


<div class="ProductBoxs">
    {% for product in products %}
<div class="ProductBox">
   
  
    {% if product.pictures[0] is defined %}
    <figure>
        
    <img class="pictureNavigation" src="{{ asset('/picture/' ~ product.pictures[0].name) }}" alt="{{ product.name }}">
  </figure>
{% endif %}
      <a href="{{ path ('show_product' , {'id': product.id})}}">{{product.name }}</a> <br> 
      {{product.price }}<br>
     <a href ="{{ path ('delete_product' , {'id': product.id})}}"> Supprimer</a>
      <a href ="{{ path ('edit_product' , {'id' : product.id})}}">Editer</a><br>
      <a href ="{{ path ('add_basket' , {'id' : product.id})}}">Ajouter au panier</a><br>
    </div>

    {% if loop.index is divisible by(4) %}
      </div><br>
      <div class="ProductBoxs">
    {% endif %}
  {% endfor %} 
</div>

{% endblock %}
