{% extends 'base.html.twig' %}

{% block title %}Crée un compte{% endblock %}

{% block body %}
    <div id="registerBox">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h2>Créer un compte</h2>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm,{'attr': {'class': 'form'}})  }}
        {{ form_row(registrationForm.email,{'label_attr': {'class': 'formRowRegister'}}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe',
            'label_attr': {'class': 'formRowRegister'}
        }) }}
       
        {{ form_row(registrationForm.agreeTerms,{'attr': {'id': 'agreeTerms'}}) }}
        {{ form_row(registrationForm.captcha  ,
            { 'label_attr': {'id': 'captcha'}}    )}}
        {{ form_errors(registrationForm.captcha) }}
        <button id="blueButton"type="submit" class="btn">S'enregistrer</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
